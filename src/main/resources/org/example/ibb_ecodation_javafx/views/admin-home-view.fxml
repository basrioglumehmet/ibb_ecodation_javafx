<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<StackPane xmlns:fx="http://javafx.com/fxml/1">

    <VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
          style="-fx-background-color: #0f0f0f; -fx-padding: 20px;">

        <TextField promptText="Filter emails..."
                   style="-fx-background-color: #202020; -fx-text-fill: white; -fx-prompt-text-fill: gray;
                      -fx-border-radius: 8px; -fx-padding: 10px; -fx-border-color: #303030;" />

        <TableView fx:id="tableView"
                   style="-fx-background-color: #181818; -fx-border-color: #303030; -fx-border-radius: 8px;
                      -fx-padding: 10px; -fx-text-fill: white;">
            <columns>
                <TableColumn fx:id="statusColumn" text="Status" />
                <TableColumn fx:id="emailColumn" text="Email" />
                <TableColumn fx:id="amountColumn" text="Amount" />
            </columns>
        </TableView>

    </VBox>
</StackPane>
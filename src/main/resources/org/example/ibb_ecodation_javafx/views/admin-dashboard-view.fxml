<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.Region?>
<?import org.example.ibb_ecodation_javafx.ui.button.ShadcnButton?>
<?import org.example.ibb_ecodation_javafx.ui.navbar.ShadcnNavbar?>
<?import org.example.ibb_ecodation_javafx.ui.avatar.ShadcnAvatar?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.ibb_ecodation_javafx.controller.AdminDashboardController"
            prefWidth="Infinity" prefHeight="Infinity"
            maxWidth="Infinity" maxHeight="Infinity">

    <!-- Navbar (Sabit Üst Menü) -->
    <top>
        <ShadcnNavbar fx:id="navbar" />
    </top>

    <!-- Sol Sidebar (Sabit Genişlik) -->
    <left>
        <VBox fx:id="sidebar"
              spacing="10"
              style="-fx-padding: 10;"
              alignment="CENTER_LEFT"
              maxWidth="300"
              prefWidth="250">

            <!-- Butonlar -->
            <VBox VBox.vgrow="ALWAYS" spacing="10" style="-fx-padding: 15;">
                <ShadcnButton glyphIconName="HOME" align="LEFT" fullWidth="true" onAction="#handleHomeButton" text="Anasayfa" type="GHOST"/>
                <ShadcnButton align="LEFT" glyphIconName="NOTIFICATION" fullWidth="true" onAction="#handleNotificationsButton" text="Bildirimler" type="GHOST"/>
                <ShadcnButton align="LEFT" glyphIconName="USER" fullWidth="true" onAction="#handleProfileButton" text="Profil" type="GHOST"/>
                <ShadcnButton align="LEFT" glyphIconName="NOTE" fullWidth="true" onAction="#handleNotesButton" text="Notlar" type="GHOST"/>
                <ShadcnButton align="LEFT" glyphIconName="CLOUD_UPLOAD" fullWidth="true" onAction="#handleBackupButton" text="Yedekler" type="GHOST"/>
                <ShadcnButton align="LEFT" glyphIconName="COG" fullWidth="true" onAction="#handleConfigButton" text="Arayüz Ayarları" type="GHOST"/>
            </VBox>

            <!-- Sidebar Alt Kısmı -->
            <VBox fx:id="sidebarBottom" style="-fx-padding: 10;" alignment="CENTER">
                <HBox spacing="10" alignment="CENTER">
                    <ShadcnAvatar fx:id="shadcnAvatar" />
                    <VBox style="-fx-padding: 10;" alignment="CENTER">
                        <Label text="Mehmet Basrioğlu" style="-fx-text-fill:white;" />
                        <Label text="Admin" style="-fx-text-fill:#7f7f86;" />
                    </VBox>
                </HBox>
            </VBox>
        </VBox>
    </left>

    <!-- Ana İçerik Alanı (Responsive center) -->
    <center>
        <StackPane fx:id="mainContentArea"
                   style="-fx-background-color:black;"
                   BorderPane.alignment="CENTER"
                   maxWidth="Infinity" maxHeight="Infinity"
                   prefWidth="Infinity" prefHeight="Infinity">
            <fx:include fx:id="contentArea" source="admin-home-view.fxml" />
        </StackPane>
    </center>

</BorderPane>
